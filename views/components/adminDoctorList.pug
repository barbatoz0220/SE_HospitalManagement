table
    caption Doctor List
    thead
        tr 
            th Name
            th DOB
            th Gender
            th Phone
    tbody
        tr
            each doctor in doctors
                tr
                    td
                        input(class='read-only' type='text' name='name', value = doctor.NAME, required='', readonly=true)
                    td
                        input(class='read-only' type='text' name='dob', value = doctor.DOB, required='', readonly=true) 
                    td
                        input(class='read-only' type='text' name='gender', value = doctor.GENDER, required='', readonly=true)
                    td
                        input(class='read-only' type='text' name='phone', value = doctor.PHONE, required='', readonly=true)
                    td
                        button(type="button" onclick='deleteDoctor('+doctor.ID+')') Delete
                    td
                        button(type="button" class="update-button" onclick='getIndex(' + doctor.ID + ')') Update
                        form(id=doctor.ID, class="update-form" action="/admin/doctor-list/update/" + doctor.ID, method="POST" onsubmit="return submitUpdateForm(this)" enctype="multipart/form-data")
                            input(type='text' name='name')
                            input(type='text' name='dob')
                            input(type='text' name='gender')
                            input(type='text' name='phone')
                            input(type="submit" value="Done")   
        tr
            td
                form(action="/admin/doctor-list/search" method="POST" onsubmit='return submitSearchForm(this)' enctype="multipart/form-data")  
                    input(type='text' name='name')
                    input(type='text' name='dob')
                    input(type='text' name='gender')
                    input(type='text' name='phone')
                    input(type="submit" value="Search")      
        tr
            td
                button(class="insert-button" onclick="toggleInsertForm()") Add doctor
                form(class="insert-form" action="/admin/doctor-list/insert" method="POST" onsubmit="return submitAddForm(this)" enctype="multipart/form-data")
                    input(type='text' name='name' required='')
                    input(type='text' name='dob' required='')
                    input(type='text' name='gender' required='')
                    input(type='text' name='phone' required='')
                    input(id="add-btn" type="submit" value="Add")


div#pageNumber
    - for(var x = 1; x <= page; x++)
        button(onclick='changePage(' + x + ')') #{x}
        br