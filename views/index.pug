doctype html
html(lang = 'en')
  head
    meta(charset='UTF-8')
    meta(name="viewport" content="width=device-width, initial-scales=1.0")
    title HMS25 - Software Engineering Project
    link(rel="stylesheet", href="/styles/index.css")
    link(rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css")
    // jQuery script
    script(src="https://code.jquery.com/jquery-3.5.1.min.js")
    script.
      $(function(){
        
        $(".toggle").on("click", function(){
          if($(".item").hasClass("active")){
            $(".item").removeClass("active");
          } else {
            $(".item").addClass("active");
            $(".item").animate({transition: "0.5s"});
          }
        })

        $('.slider').slick({
          appendArrows: $('footer > div')
        })
      })
    // slick script
    script(type="text/javascript" src="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js")

  body
    // navigation bar
    nav 
      ul.menu
        li.hmsLogo
          a(href="#logo") HMS 25
        li.item
          a(href="#home") Home
        li.item
          a(href="#about") About
        li.item
          a(href="#contact") Contacts
        li.item.button
          a(href="emergency") Emergency
        li.toggle
          span.bars
    
    // picture  
    div.slider
      // container for images
      div.slider__slide.slider__slide--1
        div.slider__lead.bold OUR HOSPITAL
        div.slider__heading.bold Facilities
