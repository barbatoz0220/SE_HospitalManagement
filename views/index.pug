extends structure.pug

block metadata
  meta(charset='UTF-8')
  meta(name="viewport" content="width=device-width, initial-scales=1.0")
  title HMS25 - Software Engineering Project
  link(rel="stylesheet" href="/styles/navBar.css")
  link(rel="stylesheet" href="/styles/index.css")
  link(rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css")
  // jQuery script
  script(src="https://code.jquery.com/jquery-3.5.1.min.js")
  script.
    $(function(){

      $(".toggle").on("click", function(){
        if($(".item").hasClass("active")){
          $(".item").removeClass("active");
        } else {
          $(".item").addClass("active");
          $(".item").animate({transition: "0.5s"});
        }
      })
    })

block navBar
  nav 
    ul.menu
      a.hmsLogo(href="#logo") HMS 25
      li.item
        a(href="#home") Home
      li.item
        a(href="#about") About
      li.item
        a(href="#contact") Contacts
      li.item.button
        a.emergency(href="emergency") Emergency
      li.toggle
        span.bars

block main
  div.main

    // login form
    block loginForm
      div.login-form
        h1 Login Form
        form(action='auth' method='POST')
          input(type='text' name='username' placeholder='Username' required='')
          input(type='password' name='password' placeholder='Password' required='')
          input(type='submit' value="Submit")

    // picture
    block slider
      div.slider
        // container for images
        div.slider__item
          img.slider__image(src="/public/images/pic1.jpg")
          div.slider__text
            h5 Facilities
            p We have the greatest facilities possible

        div.slider__item
          img.slider__image(src="/public/images/pic2.jpg")
          div.slider__text
            h5 Staff
            p We offer you the best of our abilities

        div.slider__item
          img.slider__image(src="/public/images/pic3.jpg")
          div.slider__text
            h5 Professionalism
            p Our team is professional with cutting-edge technology

        div.slider__item
          img.slider__image(src="/public/images/pic4.jpg")
          div.slider__text
            h5 Care
            p We care for your every moment