extends structure.pug

block metadata
  meta(charset='UTF-8')
  meta(name="viewport" content="width=device-width, initial-scales=1.0")
  title HMS25 - Software Engineering Project
  // CSS scripts
  link(rel="stylesheet" href="/styles/navBar.css")
  link(rel="stylesheet" href="/styles/index.css")
  link(rel='stylesheet', href='https://use.fontawesome.com/releases/v5.15.1/css/all.css', integrity='sha384-vp86vTRFVJgpjF9jiIGPEEqYqlDwgyBgEF109VFjmqGmIY/Y4HV4d3Gp2irVfcrp', crossorigin='anonymous')

  // jQuery scripts
  script(src="https://code.jquery.com/jquery-3.5.1.min.js")
  script.
    $(function(){
      $(".toggle").on("click", function(){
        if($(".item").hasClass("active")){
          $(".item").removeClass("active");
        } else {
          $(".item").addClass("active");
          $(".item").animate({transition: "0.5s"});
        }
      })
    })

block navBar
  nav 
    ul.menu
      a.hmsLogo(href="logo") HMS25 
        i.fas.fa-hospital-symbol
      li.item
        a.navBar(href="") Home
      li.item
        a.navBar(href="about") About
      li.item
        a.navBar(href="contacts") Contacts
      li.item.button
        a.emergency(href="emergency") Emergency   
          i.fas.fa-ambulance
      li.toggle
        span.bars

block main
  main
  // login form
  block loginForm
    div.login-form
      h1 Login Form
      form(action='auth' method='POST')
        input(type='text' name='username' placeholder='Username' required='')
        input(type='password' name='password' placeholder='Password' required='')
        input(type='submit' value="Submit")

  // picture
  block slider
    div.slider
      // container for images
      div.slider__item
        img.slider__image(src="images/pic1.jpg")
        div.slider__text
          h5 Facilities
          p We have the greatest facilities possible

      div.slider__item
        img.slider__image(src="images/pic2.jpg")
        div.slider__text
          h5 Staff
          p We offer you the best of our abilities

      div.slider__item
        img.slider__image(src="images/pic3.jpg")
        div.slider__text
          h5 Professionalism
          p Our team is professional with cutting-edge technology

      div.slider__item
        img.slider__image(src="images/pic4.jpg")
        div.slider__text
          h5 Care
          p We care for your every moment
