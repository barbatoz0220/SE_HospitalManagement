block navBar
   include ../../components/userNavBar
block main
   div
      button
         a(href="admin/doctor-list") Doctor List
      button
         a(href="admin/patient-list") Patient List
      if reqNos
         each reqNo in reqNos
            span(id="rNo" style="display: none;")= reqNo.NUMBER
      button
         a(href="admin/request-list") Request List

script(type="text/javascript" src="/javascript/alertify/alertify.min.js")
script.
   var reqNo = document.getElementById("rNo").textContent;
   alertify.alert("You have " + reqNo + " requests waiting for process", function() {
      alertify.message("Confirmed!");
   }).set({title: "Welcome"});