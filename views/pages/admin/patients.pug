extends ../structure.pug

block metadata
   meta(charset='UTF-8')
   meta(name="viewport" content="width=device-width, initial-scales=1.0")
   // CSS scripts
   link(rel="stylesheet" href="/styles/navBar.css")
   link(rel="stylesheet" href="/styles/index.css")
   link(rel='stylesheet' href='https://use.fontawesome.com/releases/v5.15.1/css/all.css' integrity='sha384-vp86vTRFVJgpjF9jiIGPEEqYqlDwgyBgEF109VFjmqGmIY/Y4HV4d3Gp2irVfcrp' crossorigin='anonymous')
   link(rel="stylesheet" href="/styles/form.css")
   link(rel="stylesheet" href="/styles/list.css")
   link(rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css")
block navBar
   include ../../components/userNavBar

block main
   div#container
      include ../../components/adminPatientList

   div#pageNumber
      - for(var x = 1; x <= page; x++)
         button(onclick='changePage(' + x + ')') #{x}
         br

   script(src="https://code.jquery.com/jquery-3.5.1.min.js")
   script(src="https://code.jquery.com/ui/1.12.1/jquery-ui.js")
   script(type="text/javascript" src="/javascript/patientList.js")
   script.
      function getIndex(index) {
         $("#" + index).toggle();
         inputDatePicker();
      };
      //- $(".insert-button").click(function(){
      //-    $(".insert-form").toggle();
      //-    $(".row-insert-form").toggle();
      //- });
      
      function toggleInsertForm() {
         $(".row-insert-form").toggle();
         inputDatePicker();
      }

      function inputDatePicker() {
         $(".datepicker").datepicker({
            dateFormat: 'yy-mm-dd',
            autoclose: true
            });
      };