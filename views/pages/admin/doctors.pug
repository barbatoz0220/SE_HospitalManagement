block main      
   div#container
      include ../../components/adminDoctorList

   script(type="text/javascript" src="/javascript/alertify/alertify.min.js")
   script(src="https://code.jquery.com/jquery-3.5.1.min.js")
   script(src="https://code.jquery.com/ui/1.12.1/jquery-ui.js")
   script(type="text/javascript" src="/javascript/doctorList.js")
   script.
      function getIndex(index) {
         $("#" + index).toggle();
         inputDatePicker();
      };

      function toggleInsertForm() {
         $(".insert-form").toggle();
         inputDatePicker();
      };

      function inputDatePicker() {
         $(".datepicker").datepicker({
            dateFormat: 'yy-mm-dd',
            autoclose: true,
            changeYear: true,
            changeMonth: true,
            yearRange: '1800:2020'
            });
      };
   
